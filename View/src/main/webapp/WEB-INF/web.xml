<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <context-param>
    <param-name>javax.faces.PROJECT_STAGE</param-name>
    <param-value>Development</param-value>
  </context-param>
  <context-param>
    <param-name>application.description</param-name>
    <param-value>Bank</param-value>
  </context-param>
  <servlet>
    <servlet-name>Faces Servlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Faces Servlet</servlet-name>
    <url-pattern>/face/*</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>
      30
    </session-timeout>
  </session-config>
  <welcome-file-list>
    <welcome-file>mainMenu.xhtml</welcome-file>
  </welcome-file-list>
  <security-role>
    <role-name>ADMINISTRATOR</role-name>
  </security-role>
  <security-role>
    <role-name>MODERATOR</role-name>
  </security-role>
  <security-role>
    <role-name>CUSTOMER</role-name>
  </security-role>
  <security-role>
    <role-name>ANONYMOUS</role-name>
  </security-role>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>products</web-resource-name>
      <url-pattern>/face/product.xhtml</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>MODERATOR</role-name>
      <role-name>ADMINISTRATOR</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>moderators</web-resource-name>
      <url-pattern>/face/moderator.xhtml</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>MODERATOR</role-name>
      <role-name>ADMINISTRATOR</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>customers</web-resource-name>
      <url-pattern>/face/customer.xhtml</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>CUSTOMER</role-name>
      <role-name>ADMINISTRATOR</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>administrators</web-resource-name>
      <url-pattern>/face/administrator</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>ADMINISTRATOR</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>filter</web-resource-name>
      <url-pattern>/face/filterCustomers.xhtml</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>ADMINISTRATOR</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>productCustomer</web-resource-name>
      <url-pattern>/face/productCustomer.xhtml</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>CUSTOMER</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>productReservation</web-resource-name>
      <url-pattern>/face/productReservation.xhtml</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>MODERATOR</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>login</web-resource-name>
      <url-pattern>/face/login.xhtml</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>ANONYMOUS</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>register</web-resource-name>
      <url-pattern>/face/registerCustomer.xhtml</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>ANONYMOUS</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>reservations</web-resource-name>
      <url-pattern>/face/reservation.xhtml</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>ADMINISTRATOR</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>changePassword</web-resource-name>
      <url-pattern>/face/changePassword.xhtml</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>ADMINISTRATOR</role-name>
      <role-name>MODERATOR</role-name>
      <role-name>CUSTOMER</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>All</web-resource-name>
      <url-pattern>/</url-pattern>
    </web-resource-collection>
    <user-data-constraint>
      <transport-guarantee>CONFIDENTIAL</transport-guarantee>
    </user-data-constraint>
  </security-constraint>
</web-app>