<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

    <application>
        <locale-config>
            <default-locale>pl</default-locale>
            <supported-locale>pl</supported-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>i18n.messages</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>
    <navigation-rule>
        <from-view-id>/product.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>deleteProduct</from-outcome>
            <to-view-id>/product.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>createProduct</from-outcome>
            <to-view-id>/product.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>submitProduct</from-outcome>
            <to-view-id>/product.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/reservation.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>deleteReservation</from-outcome>
            <to-view-id>/reservation.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>submitReservation</from-outcome>
            <to-view-id>/reservation.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/customer.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>activateCustomer</from-outcome>
            <to-view-id>/customer.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>submitCustomer</from-outcome>
            <to-view-id>/customer.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/productCustomer.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>book</from-outcome>
            <to-view-id>/productCustomer.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>deletePC</from-outcome>
            <to-view-id>/productCustomer.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/administrator.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>createAdmin</from-outcome>
            <to-view-id>/administrator.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/moderator.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>createMod</from-outcome>
            <to-view-id>/moderator.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>deleteMod</from-outcome>
            <to-view-id>/moderator.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>submitCustomer</from-outcome>
            <to-view-id>/moderator.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>logged</from-outcome>
            <to-view-id>/mainMenu.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>wrongCredentials</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/mainMenu.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/registerCustomer.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>createCustomer</from-outcome>
            <to-view-id>/registerCustomer.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
</faces-config>
